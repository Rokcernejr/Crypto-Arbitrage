# Node Environment
NODE_ENV=development

# Server Configuration
PORT=8080
HOST=localhost

# Logging
LOG_LEVEL=info
LOG_FILE_MAX_SIZE=10485760
LOG_FILE_MAX_FILES=5

# Security
SESSION_SECRET=your-session-secret-here-change-this
ENCRYPTION_KEY=your-encryption-key-here-change-this

# API Configuration (Optional - can be set via UI)
